<h1>Add Course</h1>

<form action="/add-course" method="POST">
  <div class="input-field">
    <input id="title" name="title" placeholder="Enter the title..." type="text" class="validate" required>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Field is required"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" placeholder="Enter price..." type="number" class="validate" min="1" required>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Field is required"></span>
  </div>

  <div class="input-field">
    <input id="imageURL" name="imageURL" placeholder="https://..." type="text" class="validate" required>
    <label for="imageURL">URL to Image</label>
    <span class="helper-text" data-error="Field is required"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary">Add Course</button>
</form>