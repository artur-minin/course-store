<h1 class="center-align">My order</h1>

{{#if order.length}}
{{#each order}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title blue-text text-accent-4">
          Order id: <small>{{_id}}</small>
        </span>
        <p class="date">{{date}}</p>
        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

        <ol>
          {{#each courses}}
          <li>
            <span class="green-text text-accent-3">{{course.title}} (x<strong>{{count}}</strong>)</span>
          </li>
          {{/each}}
        </ol>

        <hr>

        <p class="purple-text text-accent-4">Total price: <span class="price">{{totalPrice}}</span></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p class="center-align big">Order is empty</p>
{{/if}}