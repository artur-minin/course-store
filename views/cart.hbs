<h1 class="center-align">Cart</h1>

<div id="cart">
  {{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>{{price}}</td>
        <td>
          <button class="btn btn-small js-delete" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p>Total price: <span class="price">{{totalPrice}}</span></p>

  <form action="/order" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Make order</button>
  </form>
  {{else}}
  <p class="center-align fz2rem">Cart is empty</p>
  {{/if}}
</div>