<h1 class="center-align">Courses</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{imageURL}}" alt="{{title}}">
      </div>

      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>

      <div class="card-action yellow lighten-1 actions">
        <a href="/courses/{{id}}" target="_blank" class="indigo-text text-darken-4 bold">Open</a>
        <a href="/courses/edit/{{id}}?allow=true" class="red-text text-darken-4 bold">Edit</a>

        <form action="/cart/add" method="POST">
          <input type="hidden" name="id" value="{{id}}">
          <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p class="center-align fz2rem">No cources :(</p>
{{/if}}